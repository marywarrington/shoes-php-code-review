<!DOCTYPE html>
<html>
    <head>
        {% include '/includes/head.html.twig' %}
    </head>
    <body>
        <h2>Brand Name: {{ brand.getBrandName }}</h2>

        {% if brand_stores is not empty %}
            <ul>
            {% for brand_store in brand_stores %}
                <li><a href="/stores/{{ brand_store.getId }}">{{ brand_store.getStoreName}}</a></li>
            {% endfor %}
        {% else %}
            <p>This brand is not carried in any stores!</p>
        {% endif %}
<br>
        <form action="/{{ brand.getId }}/add_store" method="post">
            <input type="hidden" name="brand_name" value="{{ brand.getId }}">
            <label>Add a Store</label>
            <select name="id">
                {% for store in stores %}
                    <option value="{{ store.getId }}">{{ store.getStoreName }}</option>
                {% endfor %}
            </select>
            <button type="submit">Submit</button>
        </form>

<br>
        <form action='/{{ brand.getId }}/delete_brand' method='post'>
            <input name="_method" type="hidden" value="delete">
            <button type='submit'>Delete Brand</button>
        </form>

        <a href="/">Home</a>
    </body>
</html>
